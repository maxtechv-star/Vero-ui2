<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= description %>">
  <meta name="theme-color" content="#1e1b2e">
  <title><%= title %></title>

  <link rel="icon" href="/favicon.ico" type="image/x-icon">

  <!-- Force dark mode by default -->
  <script>
    (function () {
      // Always start with dark mode for eye protection
      document.documentElement.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    })();
  </script>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter','system-ui','sans-serif'],
            mono: ['Ubuntu Mono','ui-monospace','SFMono-Regular']
          },
          colors: {
            // Dark mode optimized colors
            dark: {
              100: '#2d2a3e',
              200: '#252336',
              300: '#1e1b2e',
              400: '#171525',
              500: '#100f1c'
            },
            purple: {
              150: '#a78bfa', // Softer purple for dark mode
              250: '#8b5cf6',
              350: '#7c3aed'
            }
          },
          keyframes: {
            fadeIn: { 
              '0%': { opacity: 0, transform: 'translateY(6px)' }, 
              '100%': { opacity: 1, transform: 'translateY(0)' } 
            },
            shimmer: { 
              '0%': { backgroundPosition: '-200% 0' }, 
              '100%': { backgroundPosition: '200% 0' } 
            },
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-5px)' }
            },
            glow: {
              '0%, 100%': { boxShadow: '0 0 20px -5px rgba(139, 92, 246, 0.3)' },
              '50%': { boxShadow: '0 0 30px -3px rgba(139, 92, 246, 0.5)' }
            }
          },
          animation: {
            fadeIn: 'fadeIn .45s ease-out both',
            shimmer: 'shimmer 2.2s linear infinite',
            float: 'float 3s ease-in-out infinite',
            glow: 'glow 2s ease-in-out infinite'
          },
          backgroundImage: {
            'dark-gradient': 'radial-gradient(1100px 600px at 10% -10%, rgba(139, 92, 246, .08), transparent 60%), radial-gradient(900px 500px at 90% 10%, rgba(59, 130, 246, .08), transparent 60%)'
          }
        }
      }
    }
  </script>

  <!-- Material Icons (Outlined) + Fonts -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Ubuntu+Mono:wght@400;700&display=swap" rel="stylesheet">

  <style>
    /* Dark mode optimized gradient button */
    .gbtn {
      display: inline-flex;
      align-items: center;
      gap: .5rem;
      padding: .65rem 1.25rem;
      border-radius: 0.75rem;
      color: #fff;
      font-weight: 700;
      font-size: .75rem;
      letter-spacing: .02em;
      background: linear-gradient(135deg, #7c3aed 0%, #6366f1 50%, #3b82f6 100%);
      box-shadow: 0 8px 25px rgba(139, 92, 246, 0.25);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(139, 92, 246, 0.2);
    }

    .gbtn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
      transition: left 0.5s;
    }

    .gbtn:hover::before {
      left: 100%;
    }

    .gbtn:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 35px rgba(139, 92, 246, 0.35);
    }

    .gbtn:active {
      transform: translateY(0);
    }

    /* Dark glass morphism effect */
    .dark-glass {
      background: rgba(30, 27, 46, 0.7);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(139, 92, 246, 0.15);
    }

    .dark-glass-light {
      background: rgba(45, 42, 62, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(139, 92, 246, 0.1);
    }

    /* Expand panel animations */
    .slide-down {
      animation: slideDown 0.25s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .slide-up {
      animation: slideUp 0.25s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-12px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUp {
      from {
        opacity: 1;
        transform: translateY(0);
      }
      to {
        opacity: 0;
        transform: translateY(-12px);
      }
    }

    /* Custom scrollbar for dark mode */
    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(30, 27, 46, 0.8);
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, #7c3aed, #3b82f6);
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, #6d28d9, #2563eb);
    }

    /* Gradient text optimized for dark background */
    .gradient-text {
      background: linear-gradient(135deg, #a78bfa, #60a5fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Eye-friendly text colors */
    .text-eye-safe {
      color: #e2e8f0; /* Softer white */
    }

    .text-eye-muted {
      color: #94a3b8; /* Muted gray-blue */
    }
  </style>
</head>

<body class="min-h-dvh bg-dark-400 bg-dark-gradient text-eye-safe antialiased">
  <!-- Animated background elements - subtle for dark mode -->
  <div class="fixed top-10 left-10 w-20 h-20 bg-purple-350/5 rounded-full blur-xl animate-float"></div>
  <div class="fixed top-1/3 right-20 w-16 h-16 bg-blue-400/5 rounded-full blur-xl animate-float" style="animation-delay: 1s;"></div>
  <div class="fixed bottom-20 left-1/3 w-24 h-24 bg-indigo-400/5 rounded-full blur-xl animate-float" style="animation-delay: 2s;"></div>

  <!-- Theme Toggle - Only dark mode -->
  <button id="themeToggle" class="fixed right-4 top-4 z-50 gbtn animate-glow" aria-label="Dark Mode" title="Dark Mode Only - Eye Protection">
    <span class="material-icons-outlined text-[18px]" id="themeIcon">dark_mode</span>
    <span class="hidden sm:inline">Dark Mode</span>
  </button>
  <script>
    // Remove theme toggle functionality, only dark mode
    document.getElementById('themeToggle').addEventListener('click', () => {
      // Show a tooltip or simply do nothing
      console.log('Dark mode is always enabled for eye protection');
    });
  </script>

  <main class="mx-auto max-w-6xl px-4 md:px-6 py-8 animate-fadeIn relative z-10">