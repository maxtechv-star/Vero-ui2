<%- include('partials/header', { title: name, description: description }) %>

<!-- HERO -->
<section class="text-left mb-12">
  <div class="inline-flex items-center gap-2 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 px-3 py-1 rounded-full text-xs font-medium mb-4">
    <span class="material-icons-outlined text-sm">rocket_launch</span>
    Welcome to the Future of APIs
  </div>

  <h1 class="flex flex-wrap items-center gap-3 text-4xl md:text-5xl font-extrabold mb-4">
    <span class="flex-grow tracking-tight gradient-text"><%= name %></span>
    <span class="inline-flex items-center rounded-2xl px-4 py-2 text-xs font-extrabold text-white
                 bg-gradient-to-r from-purple-500 via-indigo-500 to-blue-600 shadow-lg animate-glow">
      v<%= version %>
    </span>
  </h1>

  <p class="text-slate-600 dark:text-slate-300 text-lg leading-relaxed max-w-2xl mb-8">
    <%= description %>
  </p>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="rounded-2xl glass dark:glass-dark p-4 text-center shadow-lg hover:shadow-xl transition-shadow">
      <div class="text-2xl font-bold gradient-text mb-1">
        <% if (endpoints && endpoints.length > 0) { %>
          <%= endpoints.reduce((total, cat) => total + cat.items.length, 0) %>
        <% } else { %>0<% } %>
      </div>
      <div class="text-xs text-slate-600 dark:text-slate-400 font-medium">Total Endpoints</div>
    </div>

    <div class="rounded-2xl glass dark:glass-dark p-4 text-center shadow-lg hover:shadow-xl transition-shadow">
      <div class="text-2xl font-bold gradient-text mb-1">
        <% if (endpoints && endpoints.length > 0) { %>
          <%= endpoints.length %>
        <% } else { %>0<% } %>
      </div>
      <div class="text-xs text-slate-600 dark:text-slate-400 font-medium">Categories</div>
    </div>

    <div class="rounded-2xl glass dark:glass-dark p-4 text-center shadow-lg hover:shadow-xl transition-shadow">
      <div class="text-2xl font-bold gradient-text mb-1">99.9%</div>
      <div class="text-xs text-slate-600 dark:text-slate-400 font-medium">Uptime</div>
    </div>

    <div class="rounded-2xl glass dark:glass-dark p-4 text-center shadow-lg hover:shadow-xl transition-shadow">
      <div class="text-2xl font-bold gradient-text mb-1">24/7</div>
      <div class="text-xs text-slate-600 dark:text-slate-400 font-medium">Support</div>
    </div>
  </div>

  <% if (links && links.length > 0) { %>
    <div class="mb-8">
      <h2 class="text-lg font-bold text-slate-800 dark:text-slate-200 mb-4 flex items-center gap-2">
        <span class="material-icons-outlined text-purple-500 dark:text-purple-400">link</span>
        Quick Links
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% links.forEach(function(link){ %>
          <a href="<%= link.url %>" target="_blank"
             class="rounded-2xl glass dark:glass-dark p-4 shadow-lg hover:shadow-xl transition-all duration-300 group hover:scale-105">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 rounded-xl grid place-items-center bg-gradient-to-r from-purple-500 to-blue-600 text-white group-hover:scale-110 transition-transform">
                <span class="material-icons-outlined">link</span>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-slate-800 dark:text-slate-200 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"><%= link.title %></h3>
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1"><%= link.subtitle || 'External resource' %></p>
              </div>
              <span class="material-icons-outlined text-slate-400 dark:text-slate-500 group-hover:text-purple-500 dark:group-hover:text-purple-400 transition-colors">north_east</span>
            </div>
          </a>
        <% }) %>
      </div>
    </div>
  <% } %>

  <div class="flex gap-3 flex-wrap">
    <a href="#categories" class="gbtn">
      <span class="material-icons-outlined text-[14px]">explore</span> Explore Categories
    </a>
    <a href="#" class="rounded-xl border border-slate-200 dark:border-purple-500/20 bg-white/50 dark:bg-slate-800/50 px-4 py-2 text-xs font-semibold text-slate-700 dark:text-slate-300 hover:border-purple-300 dark:hover:border-purple-500/40 transition-colors">
      <span class="material-icons-outlined text-[14px] mr-1">description</span> Documentation
    </a>
  </div>
</section>

<!-- STATUS (optional) -->
<% if (typeof current_status !== 'undefined') { %>
  <% if (current_status === 'maintenance') { %>
    <div class="rounded-2xl border border-yellow-200 dark:border-yellow-500/20 bg-yellow-50/80 dark:bg-yellow-500/10 p-4 mb-6 shadow-lg">
      <div class="flex items-start">
        <span class="material-icons-outlined text-yellow-600 dark:text-yellow-400 text-lg mr-3">warning</span>
        <div>
          <div class="font-bold text-sm text-yellow-800 dark:text-yellow-300 mb-1">System Maintenance</div>
          <div class="text-xs text-yellow-700 dark:text-yellow-400/80">Some endpoints may be delayed or unavailable.</div>
        </div>
      </div>
    </div>
  <% } else if (current_status === 'error') { %>
    <div class="rounded-2xl border border-red-200 dark:border-red-500/20 bg-red-50/80 dark:bg-red-500/10 p-4 mb-6 shadow-lg">
      <div class="flex items-start">
        <span class="material-icons-outlined text-red-600 dark:text-red-400 text-lg mr-3">error</span>
        <div>
          <div class="font-bold text-sm text-red-800 dark:text-red-300 mb-1">Service Error</div>
          <div class="text-xs text-red-700 dark:text-red-400/80">Most endpoints are unavailable at this time.</div>
        </div>
      </div>
    </div>
  <% } %>
<% } %>

<!-- CATEGORIES -->
<section id="categories" class="space-y-4">
  <h2 class="text-2xl font-bold text-slate-800 dark:text-slate-200 mb-6 flex items-center gap-2">
    <span class="material-icons-outlined text-purple-500 dark:text-purple-400">category</span>
    API Categories
  </h2>

  <% if (endpoints && endpoints.length > 0) { %>
    <% endpoints.forEach((category) => { %>
      <%
        const categorySlug = category.name.toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '')
          .replace(/\s+/g, '-')
          .trim();
        const categoryConfig = categories[categorySlug] || {};
        const categoryType = categoryConfig.type || 'application/json';
        const categoryDesc = categoryConfig.description || '-';
      %>
      <a href="/category/<%= categorySlug %>" class="block group">
        <div class="rounded-2xl glass dark:glass-dark p-5 shadow-lg hover:shadow-xl transition-all duration-300 group-hover:scale-105">
          <div class="flex items-center justify-between">
            <div class="flex items-center min-w-0 flex-1">
              <div class="h-12 w-12 rounded-xl grid place-items-center bg-gradient-to-r from-purple-500 to-blue-600 text-white mr-4 group-hover:scale-110 transition-transform">
                <span class="material-icons-outlined">folder</span>
              </div>
              <div class="flex flex-col min-w-0 flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="font-bold text-lg truncate text-slate-800 dark:text-slate-200 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"><%= category.name %></h3>
                  <span class="inline-flex items-center rounded-full px-3 py-1 text-[10px] font-extrabold text-white bg-gradient-to-r from-purple-500 to-blue-600">
                    <%= category.items.length %> endpoints
                  </span>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">
                  <span class="font-mono text-xs bg-slate-100 dark:bg-slate-800 px-2 py-1 rounded border border-slate-200 dark:border-slate-700"><%= categoryType %></span>
                </p>
                <% if (categoryDesc && categoryDesc !== '-') { %>
                  <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-2"><%= categoryDesc %></p>
                <% } %>
              </div>
            </div>
            <span class="material-icons-outlined text-slate-400 dark:text-slate-500 group-hover:text-purple-500 dark:group-hover:text-purple-400 transition-colors transform group-hover:translate-x-1">arrow_forward_ios</span>
          </div>
        </div>
      </a>
    <% }) %>
  <% } else { %>
    <div class="rounded-2xl glass dark:glass-dark p-14 text-center shadow-lg">
      <div class="w-16 h-16 rounded-2xl bg-gradient-to-r from-purple-500 to-blue-600 flex items-center justify-center mx-auto mb-4">
        <span class="material-icons-outlined text-white text-2xl">api</span>
      </div>
      <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">No API categories available yet.</h3>
      <p class="text-sm text-slate-500 dark:text-slate-400">Check back later for updates.</p>
    </div>
  <% } %>
</section>

<%- include('partials/footer', { name }) %>